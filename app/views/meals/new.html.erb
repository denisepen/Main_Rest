

<%= form_for @meal do |f| %>
<p class="form-title">Add New Meal</p>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :calorie_count%>
<%= f.number_field :calorie_count %> <br>
<%= f.label :description %>
<%= f.text_area :description %> <br>
<%= f.label :price%>
<%= f.number_field :price, :class => 'text_field', :step => 0.05 %> <br>
<%= f.label :category%>
<%= f.text_field :category %> <br>

<%# f.label "Ingredient" %>

<%= f.submit "create meal" %>
<% end %>
